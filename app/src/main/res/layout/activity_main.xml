<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckMeds"
        android:textSize="35sp"
        android:textColor="@color/texto_titulo"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <!-- Botones de navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"

        android:weightSum="3">

        <Button
            android:id="@+id/btnNuevo"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Nuevo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/boton_primario_fondo"
            android:drawableStart="@drawable/ic_add_circle"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:background="@drawable/bg_boton_primario" />

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Historial"
            android:textAllCaps="false"
            android:textColor="@color/boton_secundario_texto"
            android:backgroundTint="@color/boton_secundario_fondo"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:background="@drawable/bg_boton_secundario" />

        <Button
            android:id="@+id/btnConfig"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Config"
            android:textAllCaps="false"
            android:textColor="@color/boton_secundario_texto"
            android:backgroundTint="@color/boton_secundario_fondo"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:background="@drawable/bg_boton_secundario" />
    </LinearLayout>

    <!-- Subtítulo -->
    <TextView
    android:id="@+id/tvSubtitulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Medicamentos Registrados"
    android:textSize="20sp"
    android:textColor="@color/boton_secundario_texto"
    android:fontFamily="sans-serif-medium"
    android:textAlignment="center"
    android:layout_margin="25dp" />

    <!-- Scroll de medicamentos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contenedorMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp" />
    </ScrollView>

</LinearLayout>
