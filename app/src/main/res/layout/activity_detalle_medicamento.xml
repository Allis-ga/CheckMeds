<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vertical"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del Medicamento -->
        <ImageView
            android:id="@+id/imgMedicamento"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_medication"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_edittext" />

        <!-- Nombre del medicamento -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del medicamento"
            android:textSize="30sp"
            android:textColor="@color/texto_titulo"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:textAlignment="center" />

        <!-- Dosis -->
        <TextView
            android:id="@+id/tvDosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosis: "
            android:textSize="25sp"
            android:textColor="@color/texto_subtitulo"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="6dp"
            android:textAlignment="center" />

        <!-- Frecuencia -->
        <TextView
            android:id="@+id/tvFrecuencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cada X horas"
            android:textSize="25sp"
            android:textColor="@color/texto_subtitulo"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="6dp"
            android:textAlignment="center" />

        <!-- Duración -->
        <TextView
            android:id="@+id/tvDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración: X días"
            android:textSize="25sp"
            android:textColor="@color/texto_subtitulo"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />

        <!-- Botón Editar -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:background="@drawable/bg_boton_secundario"
            android:textColor="@color/boton_secundario_texto"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:textSize="20sp"
            android:padding="14dp" />

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Medicamento"
            android:background="@drawable/bg_boton_critico"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:padding="14dp" />

    </LinearLayout>

</ScrollView>
